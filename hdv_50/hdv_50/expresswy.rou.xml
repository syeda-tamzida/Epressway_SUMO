<?xml version="1.0" encoding="UTF-8"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Vehicle Types with lane-changing enabled -->
    <vType id="bus" maxSpeed="27.80" accel="1.2" decel="3.5" sigma="0.25" tau="1.4" color="red" length="10.6"
           lcStrategic="1.0" lcCooperative="1.0" lcSpeedGain="1.0" lcKeepRight="0.3"/>

    <vType id="car" maxSpeed="33.30" accel="2.60" decel="4.5" sigma="0.2" tau="1" color="cyan" length="4.5"
           lcStrategic="1.0" lcCooperative="1.0" lcSpeedGain="1.0" lcKeepRight="0.2"/>

    <vType id="truck" maxSpeed="25.00" vClass="truck" accel="1.2" decel="3" sigma="0.2" color="blue" length="7.5"
           lcStrategic="1.0" lcCooperative="1.0" lcSpeedGain="1.0" lcKeepRight="0.8"/>
		   
	<vType id="cav_nextgen"
       carFollowModel="Krauss"
       maxSpeed="36.11"          
       accel="1.7"
       decel="1.1"
       emergencyDecel="3.0"
       tau="1.5"                 
       minGap="0.6"
       sigma="0.0"
       speedDev="0.0"
       speedFactor="1.0"        
       length="5.0"
       lcStrategic="1.0"
       lcCooperative="1.0"
       lcKeepRight="0.3"
       color="yellow"/>
	   
    <!-- Define route including all edges -->
    <route id="main_route" edges="E2 E0 E0.22 E0.1681 E4"/>

    <!-- Flows with random lane departure and lane-changing active -->
    <flow id="truck_flow" type="truck" route="main_route" begin="0" end="3600"
          vehsPerHour="500" departSpeed="13.00" departLane="random"/>

    <flow id="bus_flow" type="bus" route="main_route" begin="0" end="3600"
          vehsPerHour="250" departSpeed="13.00" departLane="random"/>

    <flow id="car_flow" type="car" route="main_route" begin="0" end="3600"
          vehsPerHour="4250" departSpeed="13.00" departLane="random"/>
		  
    <flow id="cav_nextgen" type="cav_nextgen" route="main_route" begin="0" end="3600.0" vehsPerHour="5000" 
	      departSpeed="13.00" departLane="random" />

</routes>
