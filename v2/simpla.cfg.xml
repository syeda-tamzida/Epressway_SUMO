<?xml version="1.0" encoding="UTF-8"?>
<simpla>
  <!-- How often SIMPLA updates platoons (seconds) -->
  <param key="updatePeriod" value="2.0"/>

  <!-- Which vTypes can platoon + which type to use as leader/follower -->
  <!-- Use your own CAV vType ids here -->
  <vehicleType id="cav_normal" leaderType="cav_normal" followerType="cav_follower"/>

  <!-- Join conditions (avoid deadlocks in dense urban nets) -->
  <param key="minCommonRouteLength" value="500"/>   <!-- meters shared with leader -->
  <param key="minCommonRouteEdges"  value="3"/>     <!-- shared edge count -->

  <!-- Platoon geometry & timing -->
  <param key="platoonGap"      value="15.0"/>  <!-- target gap (m) between vehicles in platoon -->
  <param key="minPlatoonSize"  value="2"/>
  <param key="maxPlatoonSize"  value="6"/>
  <param key="splitTime"       value="3.0"/>   <!-- s to split when needed -->
  <param key="catchupDistance" value="100.0"/> <!-- m radius to look for a leader -->

  <!-- Catch-up policy: temporarily allow overspeed to join -->
  <param key="catchupSpeedFactor" value="2.0"/>

  <!-- SIMPLA works best with default lane-change model (no sublane) -->
  <param key="forbidSubLane" value="true"/>
</simpla>