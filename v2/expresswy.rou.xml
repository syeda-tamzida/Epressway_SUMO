<?xml version="1.0" encoding="UTF-8"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    
		   
	<!-- Normal/leader CAV (default driving) -->
<vType id="cav_normal" carFollowModel="Krauss"
       maxSpeed="36.11" accel="1.7" decel="1.1" emergencyDecel="3.0"
       tau="1.5" minGap="0.6" sigma="0.0" speedFactor="1.0"
       lcStrategic="1.0" lcCooperative="1.0" lcKeepRight="0.3" length="4.6" color="green"/>

<!-- In-platoon follower (tight headway) -->
<vType id="cav_follower" carFollowModel="Krauss"
       maxSpeed="36.11" accel="3.0" decel="2.0" emergencyDecel="4.0"
       tau="0.3" minGap="0.3" sigma="0.0" speedFactor="1.0"
       length="4.6" color="yellow"/>
	   
    <!-- Define route including all edges -->
    <route id="main_route" edges="E2 E0 E0.22 E0.1681 E4"/>

    <flow id="cars_hdv"   type="cav_follower"        route="main_route" begin="0" end="3600" vehsPerHour="8000"/>
    <flow id="cav_flow"   type="cav_normal" route="main_route" begin="0" end="3600" vehsPerHour="2000" departLane="random" departSpeed="max"/>
		  
    

</routes>
